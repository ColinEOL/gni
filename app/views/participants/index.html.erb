<h1>Listing participants</h1>

<table>
  <tr>
    <th>Type</th>
  </tr>

<% for participant in @participants %>
  <tr>
    <td><%=h participant.type %></td>
    <td><%= link_to 'Show', participant.get_show %></td>
    <td><%= link_to 'Edit', participant.get_edit %></td>
    <td><%= link_to 'Destroy', participant.get_destroy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

