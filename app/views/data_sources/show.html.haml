=title "#{@data_source.title}"

- content_for :content_splash do
  - ellipsis = (@data_source.title.length > 140) ? @data_source.title[0..137] + "..." : @data_source.title
  %h2 #{ellipsis}

- if @data_source.web_site_url
  %p
    %a{:href => @data_source.web_site_url}= @data_source.web_site_url

%p.data-source-id
  = "Data Source ID:"
  %span= @data_source.id

%p #{@data_source.description}
