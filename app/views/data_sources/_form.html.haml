= form_for @data_source do |f|
  -if @data_source.errors.any?
    #error_explanation
      %h2= "#{pluralize(@data_source.errors.count, "error")} prohibited this data_source from being saved:"
      %ul
        - @data_source.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
