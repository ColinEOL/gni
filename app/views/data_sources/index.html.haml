

#data_layout
  #data_left_column
    %h1 Scientific Names Repositories
    %table{:class => "data bordered"}
      %tr
        %th.top Logo
        %th.top Title
        %th.top Description
      -for data_source in @data_sources
        %tr
          %td= data_source_logo(data_source)
          %td= link_to h(data_source.title), data_source
          %td= h data_source.description
  #data_right_column
    - if logged_in?
    
      %h1 
        Your Repositories
        = link_to '(add new repository)', new_data_source_path

      - if @user_data_sources.size > 0
        %table{:class => "data bordered", :style => "width: 30em"}
          %tr
            %th.top Logo
            %th.top Title
            %th.top{:colspan => 2} Actions
          -for data_source in @user_data_sources
            %tr
              %td= data_source_logo(data_source)
              %td= link_to h(data_source.title), data_source
              %td= link_to('Edit', edit_data_source_path(data_source))
              %td= link_to('Delete', data_source, :confirm => 'Are you sure?', :method => :delete)

