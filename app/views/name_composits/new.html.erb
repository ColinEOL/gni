<h1>New name_composit</h1>

<% form_for(@name_composit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name_canonical %><br />
    <%= f.text_field :name_canonical %>
  </p>
  <p>
    <%= f.label :name_author_string %><br />
    <%= f.text_field :name_author_string %>
  </p>
  <p>
    <%= f.label :name_year %><br />
    <%= f.text_field :name_year %>
  </p>
  <p>
    <%= f.label :confirmed %><br />
    <%= f.check_box :confirmed %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', name_composits_path %>
